extends layout

block content
  h1 Profile Page
  if typeof email !== 'undefined' && typeof name !== 'undefined'
    p Welcome, #{name} (#{email})!
  else if typeof email !== 'undefined'
    p Welcome, #{email}!
  else
    p Welcome, Guest!
  if typeof email !== 'undefined'
    form(action="/users/logout", method="post")
      button(type="submit", class="btn btn-danger", style="margin-top:20px;") Log Out
