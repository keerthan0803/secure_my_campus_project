extends layout

block content
  .navbar
    .logo-container
      img(src="/images/Campus.png", alt="Secure My Campus Logo")
      div
        span(style="font-size:22px;font-weight:bold;color:#007bff;") Secure
        span(style="font-size:16px;color:#333;letter-spacing:1px;") My Campus
    .nav-links
      a(href="/") Home
      a(href="/complaint") Complaint
      if email
        a(href="/form") Form Page
        a(href="/help") Help Center
        a(href="/profile", title="Profile") Profile
      if !email
        a(href="/users/signup") Sign Up
        a(href="/users/signin") Sign In
    .profile-top-right
      if email
        a(href="/profile", title="Profile")
          img(src="/images/profile.png", alt="Profile", style="width:40px;height:40px;border-radius:50%;background:#eee;")
  .content
    .login-card
      if typeof error !== 'undefined' && error
        .error-message(style="color:#d32f2f;margin-bottom:16px;font-weight:bold;") #{error}
      form(action="/users/signup", method="post")
        h2 Sign Up for an Account
        .input-group
          label(for="name") Name
          input(type="text", id="name", name="name", placeholder="Enter your full name", required)
        .input-group
          label(for="username") Username
          input(type="text", id="username", name="username", placeholder="Choose a username", required)
        .input-group
          label(for="phone") Phone Number
          input(type="tel", id="phone", name="phone", placeholder="Enter your phone number", required)
        .input-group
          label(for="email") Email Address
          input(type="email", id="email", name="email", placeholder="Enter your email", required)
        .input-group
          label(for="password") Password
          input(type="password", id="password", name="password", placeholder="Enter your password", required)
        .input-group
          label(for="confirm_password") Confirm Password
          input(type="password", id="confirm_password", name="confirm_password", placeholder="Confirm your password", required)
        button(type="submit", class="btn")
          span Sign Up
        .links
          a(href="/users/signin") Already have an account? Sign In
  footer
    p Â© 2025 Secure My Campus | 
      a(href="#") Privacy Policy
      |  | 
      a(href="#") Help Center